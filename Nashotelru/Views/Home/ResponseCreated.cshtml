@model Nashotelru.Models.Response
@{
  ViewBag.Title = "Отзыв отправлен";
}
<div class="row">
  <div class="col-md-10 col-md-offset-1">
    <h2>@ViewBag.Title</h2>
    <div class="well">Спасибо, Ваш отзыв будет опубликован после просмотра модератора.</div>
    <div class="row">
      @Html.LabelFor(model => model.Name, new { @class = "control-label col-md-4" })
      <div class="col-md-8">
        @Html.DisplayFor(model => model.Name)
      </div>
    </div>
    <div class="row">
      @Html.LabelFor(model => model.Mail, new { @class = "control-label col-md-4" })
      <div class="col-md-8">
        @Html.DisplayFor(model => model.Mail)
      </div>
    </div>
    <div class="row">
      @Html.LabelFor(model => model.Text, new { @class = "control-label col-md-4" })
      <div class="col-md-8">
        @Html.Raw(Model.Text)
      </div>
    </div>
    <p style="margin-bottom:100px">@Html.ActionLink("Вернуться", "Index", null, new { @class = "btn btn-success" })</p>
  </div>
</div>

