@model Nashotelru.Models.RemindViewModel

@{
    ViewBag.Title = "Забыли Ваш пароль?";
}
<div class="row">
  <div class="col-md-6 col-md-offset-2">
    <section id="loginForm">
      @using (Html.BeginForm("Remind", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
      {
        @Html.AntiForgeryToken()
        <h2>@ViewBag.Title</h2>
        <hr />
        @Html.ValidationSummary(true)
        <div class="form-group">
          @Html.LabelFor(m => m.UserName, new { @class = "col-md-3 control-label" })
          <div class="col-md-9">
            @Html.EditorFor(m => m.UserName)
            @Html.ValidationMessageFor(m => m.UserName)
          </div>
        </div>
        <div class="form-group">
          <div class="col-md-offset-3 col-md-9">
            <input type="submit" value="Продолжить >" class="btn btn-default active" />
          </div>
        </div>
      }
    </section>
  </div>
</div>
@section Scripts {
  @Scripts.Render("~/bundles/jqueryval")
}
