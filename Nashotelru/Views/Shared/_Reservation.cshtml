@model Nashotelru.Models.BookingViewModel
@using Nashotelru.Resources.Shared
<form class="panel panel-success" role="form" name="prebron" method="post" action="http://www.nbcrs.ru/booking/nashotel/?action=price&amp;lang=ru">
  <div class="panel-heading text-center">@Menu.Booking</div>
  <div class="panel-body">
    <div class="row">
      <div class="form-group col-md-6 col-xs-6">
        @*<label for="arrive">Дата заезда:</label>*@
        @*<input type="text" class="form-control" name="arrivalDate" id="arrive" size="10">*@
        @Html.LabelFor(m => m.arrivalDate)
        @Html.EditorFor(model => model.arrivalDate)
      </div>
      <div class="form-group col-md-6 col-xs-6">
        @*<label for="depart">Дата выезда:</label>*@
        @Html.LabelFor(m => m.departureDate)
        @Html.EditorFor(model => model.departureDate)
        @*<input type="text" class="form-control" name="departureDate" id="depart" size="10">*@
      </div>
    </div>
    <div class="row">
      <div class="form-group col-xs-4">
        @Html.LabelFor(m => m.rooms)
        <select id="rooms" name="rooms" class="form-control">
          <option value="1">1</option>
          <option value="2">2</option>
          <option value="3">3</option>
          <option value="4">4</option>
        </select>
      </div>
      <div class="form-group col-xs-4">
        @Html.LabelFor(m => m.adults)
        <select id="adults" name="adults" class="form-control">
          <option value="1">1</option>
          <option value="2">2</option>
          <option value="3">3</option>
        </select>
      </div>
      <div class="form-group col-xs-4">
        @Html.LabelFor(m => m.children)
        <select id="children" name="children" class="form-control">
          <option value="0" selected="selected">0</option>
          <option value="1">1</option>
          <option value="2">2</option>
          <option value="3">3</option>
          <option value="4">4</option>
        </select>
      </div>
    </div>
    <div class="row">
      <div class="form-group col-xs-8">
        @Html.LabelFor(m => m.promoText)
        @Html.EditorFor(model => model.promoText, new { @class = "form-control input-sm" })
        @*<input type="text" class="form-control input-sm" name="promoText" id="promoText">*@
      </div>
    </div>
    <button type="submit" name="submit" class="btn btn-default btn-block btn-success">@Nashotelru.Resources.Shared.Menu.BK_Find</button>
  </div>
</form>

