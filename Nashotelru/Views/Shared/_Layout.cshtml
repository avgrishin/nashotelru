@using Nashotelru.Resources.Shared
<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  @*<meta name="viewport" content="width=device-width, minimum-scale=1.0, maximum-scale=1.0, user-scalable=no">*@
  @*<meta name="viewport" content="width=640, user-scalable=yes">*@
  <title>@ViewBag.Title - @Nashotelru.Resources.Shared.Menu.Hotel</title>
  @Styles.Render("~/Content/css")
  @Scripts.Render("~/bundles/modernizr")
  @RenderSection("css", required: false)
  @*<script src="~/Scripts/ie10wp.js"></script>*@
  <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
      <script src="https://oss.maxcdn.com/libs/respond.js/1.3.0/respond.min.js"></script>
    <![endif]-->
  @Scripts.Render("~/bundles/jquery")
  @Scripts.Render("~/bundles/bootstrap")
  @RenderSection("scripts", required: false)
  <script src="~/Scripts/jquery.ui.totop.js"></script>
  <script type="text/javascript">
    $(document).ready(function () {
      $().UItoTop({
        easingType: 'swing'
      });
    });
  </script>
</head>
<body>
  <div class="body">
    <nav class="navbar navbar-default navbar-static-top no-navbar">
      <div class="container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          @*@Html.ActionLink("НО", "Index", "Home", null, new { @class = "navbar-brand" })*@
        </div>
        <div class="navbar-collapse collapse">
          <ul class="navbar-nav nav">
            <li>@Html.ActionLink(Menu.About, "About", "Home", new { area = "" }, null)</li>
            <li>@Html.ActionLink(Menu.OurRooms, "Rooms", "Home", new { area = "" }, null)</li>
            <li>@Html.ActionLink(Menu.Restaurant, "Restaurant", "Home", new { area = "" }, null)</li>
            <li>@Html.ActionLink(Menu.Activities, "Events", "Home", new { area = "" }, null)</li>
            <li>@Html.ActionLink(Menu.SpecialOffers, "Index", "Home", new { area = "" }, null)</li>
            <li>
            @if (System.Threading.Thread.CurrentThread.CurrentUICulture.Name != "ru") { 
            <li>@Html.ActionLink("RU", "SetLanguage", "Home", new { area = "", lang = (int)Nashotelru.Culture.ru, returnUrl = this.Request.RawUrl }, new { @class = "no-ln" })</li>
            }
            @if (System.Threading.Thread.CurrentThread.CurrentUICulture.Name != "en") {
            <li>@Html.ActionLink("EN", "SetLanguage", "Home", new { area = "", lang = (int)Nashotelru.Culture.en, returnUrl = this.Request.RawUrl }, new { @class = "no-ln" })</li>
            }
            @if (System.Threading.Thread.CurrentThread.CurrentUICulture.Name != "fr") {
            <li>@Html.ActionLink("FR", "SetLanguage", "Home", new { area = "", lang = (int)Nashotelru.Culture.fr, returnUrl = this.Request.RawUrl }, new { @class = "no-ln" })</li>
            }
            @*<li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown"><small>LANGUAGE</small> <b class="caret"></b></a>
              <ul class="dropdown-menu">
                <li>@Html.ActionLink("RUSSIAN", "SetLanguage", "Home", new { area = "", lang = (int)Nashotelru.Culture.ru, returnUrl = this.Request.RawUrl }, null)</li>
                <li>@Html.ActionLink("ENGLISH", "SetLanguage", "Home", new { area = "", lang = (int)Nashotelru.Culture.en, returnUrl = this.Request.RawUrl }, null)</li>
                <li>@Html.ActionLink("FRENCH", "SetLanguage", "Home", new { area = "", lang = (int)Nashotelru.Culture.fr, returnUrl = this.Request.RawUrl }, null)</li>
              </ul>
            </li>*@
          </ul>
          @Html.Partial("_LoginPartial")
        </div>
      </div>
    </nav>
    <div class="container">
      <div class="row">
        <div class="col-lg-3 col-sm-4 no-logo text-center">
          <a href="@Url.Action("Index", "Home", new { area = "" })"><img src="~/Content/img/logo.gif" /></a>
        </div>
        <div class="col-lg-9 col-sm-8 no-address">
          @Menu.Phone <span>+7 (812) 323-22-31</span><br />
          @Menu.Fax <span>+7 (812) 328-35-46</span><br />
          <p class="no-addr">@Menu.Address</p>
        </div>
      </div>
    </div>
    <br />
    <div class="container">
      @RenderBody()
    </div>
  </div>
  <footer>
    <div class="container">
      <div class="row">
        <div class="col-md-3 col-sm-6">
          <h5>@Menu.DM_Hotel</h5>
          <ul class="list-unstyled">
            <li>@Html.ActionLink(Menu.DM_Rooms, "Rooms", "Home", new { area = "" }, null)</li>
            <li>@Html.ActionLink(Menu.DM_Restaurant, "Restaurant", "Home", new { area = "" }, null)</li>
            <li>@Html.ActionLink(Menu.DM_Contacts, "Contact", "Home", new { area = "" }, null)</li>
            <li>@Html.ActionLink(Menu.DM_News, "News", "Home", new { area = "" }, null)</li>
            <li>@Html.ActionLink(Menu.DM_Responses, "Response", "Home", new { area = "" }, null)</li>
          </ul>
        </div>
        <div class="col-md-3 col-sm-6">
          <h5>@Menu.DM_Events</h5>
          <ul class="list-unstyled">
            <li><a href="#">@Menu.DM_SpecialOffers</a></li>
            <li>@Html.ActionLink(Menu.DM_Activities, "Events", "Home", new { area = "" }, null)</li>
          </ul>
        </div>
        <div class="col-md-3 col-sm-6">
          <h5>@Menu.DM_Services</h5>
          <ul class="list-unstyled">
            <li><a href="#">@Menu.DM_Booking</a></li>
            <li>@Html.ActionLink(Menu.DM_Transfer, "Transfer", "Home", new { area = "" }, null)</li>
          </ul>
        </div>
        <div class="col-md-3 col-sm-6">
          <h5>@Menu.DM_Information</h5>
          <ul class="list-unstyled">
            <li>@Html.ActionLink(Menu.DM_Visas, "Visas", "Home", new { area = "" }, null)</li>
            <li>@Html.ActionLink(Menu.DM_Bridges, "Bridges", "Home", new { area = "" }, null)</li>
            <li>@Html.ActionLink(Menu.DM_Vacances, "Career", "Home", new { area = "" }, null)</li>
          </ul>
        </div>
      </div>
      <p>&copy; @DateTime.Now.Year - Н<i>аш</i>ОTEL</p>
    </div>
  </footer>
  <script type="text/javascript">
		  var _gaq = _gaq || [];
		  _gaq.push(['_setAccount', 'UA-20675544-1']);
		  _gaq.push(['_setDomainName', 'www.nashotel.ru']);
		  _gaq.push(['_trackPageview']);

		  (function () {
		    var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
		    ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
		    var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
		  })();
  </script>
</body>
@RenderSection("scripts1", required: false)
</html>
